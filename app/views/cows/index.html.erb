<div class="cover mb-4 mt-5 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h3>Get to know our wonderful magnificents cows!</h3>
</div>
</div>
<div class ="container d-flex">
  <div>
  <%= form_tag cows_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a cow by name"
  %>
  </div>
  <div>
  <%= submit_tag "Search", class: "btn btn-outline-primary" %>
  </div>
  <% end %>
</div>
  <div class="container py-5 cards">
    <div class="row">
      <div class="col-7">
        <div class="card-items">
          <% @cows.each do |cow| %>
              <%= link_to cow_path(cow) do %>
                <div class="card-category my-card">
                  <div class="card-image-container">
                    <%= cl_image_tag cow.photo.key, class: "card-image", crop: :fill %>
                  </div>
                  <br/>
                  <div class="card-category cows card-text">
                    <h5><strong><%= cow.name %></strong></h5>
                    <p><%= cow.description %></p>
                    <p><%= cow.address %></p>
                  </div>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
        <div class="col-5 map-container">
          <div style="width: 100%; height: 600px; position: sticky; top: 20px;"
            data-controller="mapbox"
            data-mapbox-markers-value="<%= @markers.to_json %>"
            data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
    </div>
  </div>
</div>
 <div> <%= link_to 'Home page', root_path %></div>

