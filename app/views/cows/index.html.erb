<div class="cover mb-4 mt-5 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h3>Get to know our wonderful magnificents cows!</h3>
 </div>
 <br>
</div>
  <div class="container py-5 cards">
    <div class="row my-cards-container">
      <div class="card-items">
        <% @cows.each do |cow| %>
          <div class="col-12 col-sm-6 col-md-6 card-category justify-content-space-between my-card" >
            <div class="image-card">
              <%= cl_image_tag cow.photo.key, height: 150, width: 200, crop: :fill %>
            </div>
              <br/>
              <div class="card-category cows card-text">
                <h5><strong><%= cow.name %></strong></h5>
                <p><%= cow.description %></p>
                <%= link_to "See details", cow_path(cow), class: "buttom" %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

 <div> <%= link_to 'Home page', root_path %></div>
